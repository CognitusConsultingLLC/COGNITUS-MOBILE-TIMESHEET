<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="cgdc.timesheet.controller.detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="detailpage" title="" showNavButton="true" navButtonPress="onNavBacktoDetail">
				<content>
					<Table items="{aTableRowsdays>/}" id="wbsDetails">
						<columns>
							<Column hAlign="Begin" width="14rem">
								<Text text="{i18n>cost_assignment}"/>
							</Column>
							<Column demandPopin="true">
								<Text text="Total"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet">
								<Text text="Location"></Text>
							</Column>
							<Column demandPopin="true" hAlign="End" minScreenWidth="Tablet">
								<Text text="Time Category"></Text>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{aTableRowsdays>posidtitle}" titleActive="true"/>
									<Text text="{aTableRowsdays>totalweekcatsEntered}"/>
									<ComboBox id="idMobLocVH" items="{ path: 'AvlWorkLocations>/' }" selectedKey="{aTableRowsdays>wrkloc}" change="onMobLocationChange">
										<core:Item key="{AvlWorkLocations>OBJID}" text="{AvlWorkLocations>STEXT}"/>
									</ComboBox>
									<ComboBox id="idMobPTCVH" items="{ path: 'AvlTimeCategories>/' }" selectedKey="{aTableRowsdays>timecat}" change="onMobTCChange">
										<core:Item key="{AvlTimeCategories>TIME_CAT}" text="{AvlTimeCategories>DESCRIPTION}"/>
									</ComboBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>save}" tooltip="{i18n>save}" type="Transparent" press="onSaveConfirm" icon="sap-icon://save"
							visible="{controls>/sendForApproval}"></Button>
						<Button type="Emphasized" text="{i18n>submit}>" tooltip="{i18n>submit}" enabled="{controls>/overviewDataChanged}" press="onSendApproval"
							visible="{controls>/sendForApproval}" icon="sap-icon://time-entry-request"/>
						<Button text="{i18n>cancel}" tooltip="{i18n>cancel}" type="Transparent" press="onCancelConfirm" visible="{controls>/overviewCancel}"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>